#!/usr/bin/env bash
export MAILSERVER_IMAGE=${MAILSERVER_IMAGE:="tvial/docker-mailserver"}
export MAILSERVER_IMAGE_VERSION=${MAILSERVER_IMAGE_VERSION:="latest"}
export MAILSERVER_ROOT=${MAILSERVER_ROOT:="/var/lib/dokku/services/mailserver"}

export PLUGIN_COMMAND_PREFIX="mailserver"
export PLUGIN_DATA_ROOT=$MAILSERVER_ROOT
export PLUGIN_DATASTORE_PORTS=(25 143 587 993)
export PLUGIN_DATASTORE_WAIT_PORT=25
export PLUGIN_DEFAULT_ALIAS="MAILSERVER"
export PLUGIN_ALT_ALIAS="DOKKU_MAILSERVER"
export PLUGIN_IMAGE=$MAILSERVER_IMAGE
export PLUGIN_IMAGE_VERSION=$MAILSERVER_IMAGE_VERSION
export PLUGIN_SCHEME="mailserver"
export PLUGIN_SERVICE="Mailserver"
export PLUGIN_VARIABLE="MAILSERVER"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

if [[ -d "$PLUGIN_DATA_ROOT/*" ]]; then
  rm -rf "${PLUGIN_DATA_ROOT:?}/*"
fi
